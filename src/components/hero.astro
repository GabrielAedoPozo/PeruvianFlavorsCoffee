<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.slide');
        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach((slide, i) => {
                if (i === currentSlide) {
                    // La imagen actual sale por la izquierda
                    slide.classList.remove('active');
                    slide.classList.add('exit-left');
                } else if (i === index) {
                    // La nueva imagen entra por la derecha
                    slide.classList.remove('exit-left');
                    slide.classList.add('active');
                } else {
                    // Las demás imágenes esperan a la derecha
                    slide.classList.remove('active', 'exit-left');
                }
            });
            currentSlide = index;
        }

        function nextSlide() {
            const next = (currentSlide + 1) % slides.length;
            showSlide(next);
        }

        // Asegurarse de que la primera imagen esté activa
        if (slides.length > 0) {
            slides[0].classList.add('active');
            // Iniciar el intervalo solo si hay slides
            setInterval(nextSlide, 3000);
        }
    });
</script>