---
import '../styles/hero.css';
---

<section id="hero">
    <h1 class="sr-only">Peruvian Flavors Coffee - Café peruano de especialidad</h1>
    <div class="hero-slider">
        <div class="slides-container">
            <div class="slide active">
                <picture>
                    <source media="(max-width: 768px)" srcset="/mobil1.jpg">
                    <img src="/img-hero.jpg" alt="Taza de café peruano - Peruvian Flavors Coffee" loading="eager" fetchpriority="high" decoding="async" />
                </picture>
            </div>
            <div class="slide">
                <picture>
                    <source media="(max-width: 768px)" srcset="/mobil3.jpg">
                    <img src="/imgp3.jpg" alt="Región cafetalera de Amazonas, Perú" loading="lazy" decoding="async" />
                </picture>
            </div>
            <div class="slide">
                <picture>
                    <source media="(max-width: 768px)" srcset="/mobil3.jpg">
                    <img src="/imgp2.jpg" alt="Región cafetalera de Amazonas, Perú" loading="lazy" decoding="async" />
                </picture>
            </div>
            <div class="slide">
                <picture>
                    <source media="(max-width: 768px)" srcset="/mobil6.jpg">
                    <img src="/imgp4.jpg" alt="Región cafetalera de Amazonas, Perú" loading="lazy" decoding="async" />
                </picture>
            </div>
        </div>
        <!-- Dots para navegar el hero -->
        <div class="hero-dots" role="tablist" aria-label="Paginación del slider principal"></div>
    </div>
    

</section>


<div class="products-accessories-wrap">

<section id="products" class="products-section">
    <h2 class="section-title">Nuestros Productos</h2>
    <div class="productos">
        <div class="producto-card">
            <div class="producto-image">
                <img src="/cusco.png" alt="Café Cusco" loading="lazy" decoding="async" />
            </div>
            <div class="a-buy">
                <a href="/producto1">Comprar</a>
            </div>
        </div>

        <div class="producto-card">
            <div class="producto-image">
                <img src="/cajamarca.png" alt="Café Cajamarca" loading="lazy" decoding="async" />
            </div>
            <div class="a-buy">
                <a href="/producto2">Comprar</a>
            </div>
        </div>

        <div class="producto-card">
            <div class="producto-image">
                <img src="/oxapampa.png" alt="Café Oxapampa" loading="lazy" decoding="async" />
            </div>
            <div class="a-buy">
                <a href="/producto3">Comprar</a>
            </div>
        </div>

        <div class="producto-card">
            <div class="producto-image">
                <img src="/cafe4.jpeg" alt="Café Amazonas" loading="lazy" decoding="async" />
            </div>
            <div class="a-buy">
                <a href="/producto4">Comprar</a>
            </div>
        </div>
    </div>
</section>

<section id="accessories">
    <div class="accesorios-wrapper">
        <button class="carousel-btn carousel-btn-prev" aria-label="Accesorio anterior">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
        </button>
        
        <div class="accesorios-carousel">
            <div class="accesorio-card">
                <div class="accesorio-image">
                    <img src="/articulo1.jpeg" alt="Vaso estilo japonés" loading="lazy" decoding="async" />
                </div>
                <div class="accesorio-info">
                    <h3 class="accesorio-nombre">Vaso estilo japonés</h3>
                </div>
                <div class="a-buy">
                    <a href="/accesorio1">Comprar</a>
                </div>
            </div>

            <div class="accesorio-card">
                <div class="accesorio-image">
                    <img src="/articulo2.png" alt="Prensa francesa" loading="lazy" decoding="async" />
                </div>
                <div class="accesorio-info">
                    <h3 class="accesorio-nombre">Prensa francesa</h3>
                </div>
                <div class="a-buy">
                    <a href="/accesorio2">Comprar</a>
                </div>
            </div>

            <div class="accesorio-card">
                <div class="accesorio-image">
                    <img src="/articulo3.png" alt="Mug térmico (tumbler)" loading="lazy" decoding="async" />
                </div>
                <div class="accesorio-info">
                    <h3 class="accesorio-nombre">Mug térmico (tumbler)</h3>
                </div>
                <div class="a-buy">
                    <a href="/accesorio3">Comprar</a>
                </div>
            </div>

            <div class="accesorio-card">
                <div class="accesorio-image">
                    <img src="/articulo4.png" alt="Moka italiana" loading="lazy" decoding="async" />
                </div>
                <div class="accesorio-info">
                    <h3 class="accesorio-nombre">Moka italiana</h3>
                </div>
                <div class="a-buy">
                    <a href="/accesorio4">Comprar</a>
                </div>
            </div>

            <div class="accesorio-card">
                <div class="accesorio-image">
                    <img src="/cafetera.jpg" alt="Cafetera con colador" loading="lazy" decoding="async" />
                </div>
                <div class="accesorio-info">
                    <h3 class="accesorio-nombre">KIT V60</h3>
                </div>
                <div class="a-buy">
                    <a href="/accesorio5">Comprar</a>
                </div>
            </div>
        </div>

        <button class="carousel-btn carousel-btn-next" aria-label="Siguiente accesorio">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
        </button>
    </div>
</section>

</div>

<section id="about" class="about-section">
    <div class="about-content">
        <div class="about-text">
            <h2 class="section-title">Nuestra Historia</h2>
            <p class="about-description">
            En medio de la pandemia, la familia Leiva descubrió su pasión por el café y se sumergió en este mundo, apostando por un café orgánico, 100 % natural y de alta calidad, con perfiles sensoriales únicos. Ofreciendo una experiencia excepcional en cada taza y apoyando a los productores con pagos justos y visibilidad a nivel nacional e internacional.
            </p>
            <div class="about-stats">
                <div class="stat-item">
                    <span class="stat-number">4</span>
                    <span class="stat-label">Regiones Cafetaleras</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">100%</span>
                    <span class="stat-label">Orgánico</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">+</span>
                    <span class="stat-label">Tueste Fresco</span>
                </div>
            </div>
        </div>
        <div class="about-image">
            <div class="image-grid">
                    <img src="/caficultor.jpg" alt="Agricultor de café" class="main-img" loading="lazy" decoding="async">
                <div class="pattern-overlay"></div>
            </div>
        </div>
    </div>
</section>



<section id="blog" class="blog-section">
    <h2 class="section-title">Eventos</h2>
  <div class="blog-slider fader" aria-live="polite">
    <div class="slides-track" data-fade-track>
      <div class="slide">
                        <img src="/evento2.png" alt="Afiche de evento Peruvian Flavors Coffee (2)" loading="lazy" decoding="async">
      </div>
      <div class="slide">
                        <img src="/evento1.jpeg" alt="Afiche de evento Peruvian Flavors Coffee (1)" loading="lazy" decoding="async">
      </div>
      <div class="slide">
                        <img src="/evento3.jpeg" alt="Afiche de evento Peruvian Flavors Coffee (3)" loading="lazy" decoding="async">
      </div>
      <div class="slide">
                        <img src="/evento5.jpg" alt="Afiche de evento Peruvian Flavors Coffee (5)" loading="lazy" decoding="async">
      </div>

    </div>
    <div class="blog-dots" role="tablist" aria-label="Paginación del slider"></div>
  </div>
  <noscript>
    <div style="margin-top:1.5rem;max-width:1200px;">
                <img src="/blog.png" alt="Eventos y novedades - Peruvian Flavors Coffee" style="width:100%;border-radius:16px;">
    </div>
  </noscript>
</section>

<section id="testimonials" class="testimonials-section">
    <h2 class="section-title">Testimonios</h2>
  <div class="testimonials-container">
        <div class="testimonial-card testimonial-video-card">
            <div class="testimonial-video-frame">
                <video class="testimonial-video" controls preload="metadata" playsinline>
                    <source src="/video1.mp4" type="video/mp4">
                    Tu navegador no soporta videos HTML5.
                </video>
            </div>
            <div class="testimonial-meta">
                <h3>Testimonio de Miguel</h3>
            </div>
        </div>

        <div class="testimonial-card testimonial-video-card">
            <div class="testimonial-video-frame">
                <video class="testimonial-video" controls preload="metadata" playsinline>
                    <source src="/video2.mp4" type="video/mp4">
                    Tu navegador no soporta videos HTML5.
                </video>
            </div>
            <div class="testimonial-meta">
                <h3>Testimonio de Karla</h3>
            </div>
        </div>

        <div class="testimonial-card testimonial-video-card">
            <div class="testimonial-video-frame">
                <video class="testimonial-video" controls preload="metadata" playsinline>
                    <source src="/video3.mp4" type="video/mp4">
                    Tu navegador no soporta videos HTML5.
                </video>
            </div>
            <div class="testimonial-meta">
                <h3>Testimonio de Narda</h3>
            </div>
        </div>

        <div class="testimonial-card testimonial-video-card">
            <div class="testimonial-video-frame">
                <video class="testimonial-video" controls preload="metadata" playsinline>
                    <source src="/video4.mp4" type="video/mp4">
                    Tu navegador no soporta videos HTML5.
                </video>
            </div>
            <div class="testimonial-meta">
                <h3>Testimonio de Gabriela</h3>
            </div>
        </div>

        <div class="testimonial-card testimonial-video-card">
            <div class="testimonial-video-frame">
                <video class="testimonial-video" controls preload="metadata" playsinline>
                    <source src="/video5.mp4#t=4" type="video/mp4">
                    Tu navegador no soporta videos HTML5.
                </video>
            </div>
            <div class="testimonial-meta">
                <h3>Testimonio de Kathleen</h3>
            </div>
        </div>
    </div>
</section>

<section class="banner banner-second banner-2">
    <div class="banner-overlay">
    </div>
</section>



<section id="recipes" class="recipes-section">
  <h2 class="section-title">Recetas</h2>
  <div class="recipes-container">
    <div class="recipes-slider" aria-live="polite">
      <div class="recipe-slide active">
                    <img src="/capuccino.png" alt="Receta de capuccino">
        <div class="recipe-overlay">
          <h3>Capuccino</h3>
          <a class="btn-recipe" href="/capuccino">Ver video</a>
        </div>
      </div>
      <div class="recipe-slide">
                    <img src="/chemex.png" alt="Receta de café en Chemex">
        <div class="recipe-overlay">
          <h3>Chemex</h3>
          <a class="btn-recipe" href="/chemex">Ver video</a>
        </div>
      </div>
      <div class="recipe-slide">
                    <img src="/mango.png" alt="Receta de café con mango">
        <div class="recipe-overlay">
          <h3>Café con Mango</h3>
          <a class="btn-recipe" href="/mango">Ver video</a>
        </div>
      </div>
      <div class="recipe-slide">
                    <img src="/prensafrancesa.png" alt="Receta en prensa francesa">
        <div class="recipe-overlay">
          <h3>Prensa Francesa</h3>
          <a class="btn-recipe" href="/prensa">Ver video</a>
        </div>
      </div>
      <div class="recipes-dots" role="tablist" aria-label="Paginación recetas"></div>
    </div>
  </div>
</section>




