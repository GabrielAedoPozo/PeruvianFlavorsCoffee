  <style is:global>
    :root {
      --max-width: 1200px;
      --padding-x: 2rem;
      --padding-y: 4rem;
      /* Paleta caf√© consistente */
      --color-bg: #18100c;
      --color-bg-alt: #211510;
      --color-layer: #271a14;
      --color-layer-soft: #2f1e17;
      --color-surface: #3a241a;
      --grad-accent: linear-gradient(90deg, #ffffff 0%, #ffffff 60%, #f7f7f7 100%);
      --color-accent-alt: #a86b33;
      --color-accent-soft: #e2ba87;
      --color-accent-fade: rgba(197,138,75,0.18);
      --color-highlight: #f0c040; 
      --color-border: rgba(255,255,255,0.08);
      --color-border-strong: rgba(255,255,255,0.14);
      --color-text: #f5efe9;
      --color-text-soft: #ded4cc;
      --color-text-muted: #b79f91;
      --shadow-soft: 0 6px 18px rgba(0,0,0,0.28);
      --shadow-hover: 0 10px 26px rgba(0,0,0,0.34);
      --grad-accent: linear-gradient(90deg, #ffffff 0%, #ffffff93 60%, #f7f7f7 100%);
      --text-glow: 0 0 10px rgba(255,255,255,0.22), 0 0 22px rgba(255,255,255,0.12);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    @media (max-width: 768px) {
      :root {
        --padding-x: 1.5rem;
        --padding-y: 3rem;
      }
    }

    @media (max-width: 480px) {
      :root {
        --padding-x: .8rem;
        --padding-y: 1.8rem;
      }
      
      body {
        font-size: 15px;
        line-height: 1.5;
      }
    }

    @media (max-width: 360px) {
      :root {
        --padding-x: .7rem;
      }
      
      .whatsapp-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 15px;
        right: 15px;
      }
    }

    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Quicksand', sans-serif;
      min-height: 100vh;
      background-color: var(--color-bg);
      color: var(--color-text);
      overflow-x: hidden;
      line-height: 1.45;
    }

    @media (max-width: 560px) {
      body {
        line-height: 1.5;
      }

      main {
        padding-bottom: 2rem;
      }
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      width: 100%;
      max-width: 100vw;
      background-color: #180f0f;
    }

    main {
      flex: 1;
      width: 100%;
      position: relative;
    }

    /* Global responsive images and media */
    img, svg, video, canvas { max-width: 100%; height: auto; }

    /* Prevent overflow from flex children on small screens */
    main { min-width: 0; }

    .whatsapp-button {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: #25d366;
      color: white;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
      z-index: 1000;
      animation: pulse 2s infinite;
    }

    a.whatsapp-button {
      text-decoration: none;
      color: inherit;
    }

    .whatsapp-button:hover {
      transform: translateY(-5px);
      background: #25d365da;
    }

    @keyframes pulse {
      0% {
        box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.5);
      }
      70% {
        box-shadow: 0 0 0 15px rgba(37, 211, 102, 0);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
      }
    }

    @media (max-width: 768px) {
      .whatsapp-button {
        width: 50px;
        height: 50px;
        font-size: 1.8rem;
        bottom: 20px;
        right: 20px;
      }
    }

    @media (max-width: 360px) {
      .whatsapp-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 15px;
        right: 15px;
      }
    }

    /* Preferencia reduce motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: .01ms !important;
        animation-iteration-count: 1 !important;
        transition: none !important;
      }
    }

