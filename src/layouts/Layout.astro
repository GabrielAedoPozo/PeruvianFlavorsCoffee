---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import '@fontsource/quicksand/300.css';
import '@fontsource/quicksand/400.css';
import '@fontsource/quicksand/500.css';
import '@fontsource/quicksand/600.css';
---

<!doctype html>
<html lang="es-PE">
  <head>
    <!-- Básico -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href="/logo.png" />

    <!-- Title optimizado (clave + marca) -->
    <title>
      Peruvian Flavors Coffee | El mejor café peruano
    </title>

    <!-- Meta Description (CTR optimizado) -->
    <meta
      name="description"
      content="Compra café peruano de especialidad 100% arábica, cultivado en los Andes del Perú. Café premium, sostenible y recién tostado. Envíos internacionales."
    />

    <!-- Keywords (ya no tan importantes, pero ayuda semántica) -->
    <meta
      name="keywords"
      content="café peruano, café de especialidad, café arábica peruano, peruvian specialty coffee, café andino, café premium del Perú, café sostenible, café orgánico peruano"
    />

    <meta name="author" content="Peruvian Flavors Coffee" />
    <meta name="robots" content="index, follow, max-image-preview:large" />

    <!-- Canonical -->
    <link rel="canonical" href="https://www.peruvianflavorscoffee.com/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Peruvian Flavors Coffee" />
    <meta property="og:title" content="Café Peruano de Especialidad | Peruvian Flavors Coffee" />
    <meta
      property="og:description"
      content="Descubre el auténtico café peruano de especialidad. 100% arábica, sostenible y de exportación."
    />
    <meta property="og:url" content="https://www.peruvianflavorscoffee.com/" />
    <meta property="og:image" content="https://www.peruvianflavorscoffee.com/images/og-image.jpg" />
    <meta property="og:locale" content="es_PE" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Café Peruano de Especialidad | Peruvian Flavors Coffee" />
    <meta
      name="twitter:description"
      content="Café peruano premium cultivado en los Andes. Aroma intenso y sabor auténtico."
    />
    <meta name="twitter:image" content="https://www.peruvianflavorscoffee.com/images/twitter-card.jpg" />

    <!-- SEO Local -->
    <meta name="geo.region" content="PE-LIM" />
    <meta name="geo.placename" content="Lima, Perú" />
    <meta name="geo.position" content="-12.0464;-77.0428" />
    <meta name="ICBM" content="-12.0464, -77.0428" />

    <!-- Schema.org Organización + Brand -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Brand",
      "name": "Peruvian Flavors Coffee",
      "url": "https://www.peruvianflavorscoffee.com",
      "logo": "https://www.peruvianflavorscoffee.com/logo.png",
      "slogan": "El auténtico sabor del café peruano",
      "description": "Marca peruana de café de especialidad 100% arábica cultivado en los Andes del Perú.",
      "sameAs": [
        "https://www.instagram.com/peruvianflavorscoffee",
        "https://www.facebook.com/peruvianflavorscoffee",
        "https://www.linkedin.com/company/peruvianflavorscoffee"
      ]
    }
    </script>

    <!-- Tema -->
    <meta name="theme-color" content="#3b2f2f" />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>


  <body>
    <div class="wrapper">
      <Header />

      <main>
		<slot />
      </main>

      <Footer />
    </div>

    <a href="https://wa.me/51987800910?text=Hola!%20estoy%20interesado%20en:" class="whatsapp-button" target="_blank" rel="noopener noreferrer">
      <i class="fab fa-whatsapp"></i>
    </a>
    <!-- Nuevo botón flotante de Instagram -->
    <a href="https://www.instagram.com/peruvian_flavors_coffee/" class="instagram-button" target="_blank" rel="noopener noreferrer" aria-label="Abrir Instagram">
      <i class="fab fa-instagram"></i>
    </a>
    <!-- Nuevo botón flotante de Facebook -->
    <a href="https://www.facebook.com/peruvianflavorscoffee" class="facebook-button" target="_blank" rel="noopener noreferrer" aria-label="Abrir Facebook">
      <i class="fab fa-facebook-f"></i>
    </a>

    <script>
      import '../scripts/app.js';
    </script>
  </body>

  <style is:global>
    :root {
      --max-width: 1200px;
      --padding-x: 2rem;
      --padding-y: 4rem;
      /* Paleta café consistente */
      --color-bg: #18100c;
      --color-bg-alt: #211510;
      --color-layer: #271a14;
      --color-layer-soft: #2f1e17;
      --color-surface: #3a241a;
      --grad-accent: linear-gradient(90deg, #ffffff 0%, #ffffff 60%, #f7f7f7 100%);
      --color-accent-alt: #a86b33;
      --color-accent-soft: #e2ba87;
      --color-accent-fade: rgba(197,138,75,0.18);
      --color-highlight: #f0c040; 
      --color-border: rgba(255,255,255,0.08);
      --color-border-strong: rgba(255,255,255,0.14);
      --color-text: #f5efe9;
      --color-text-soft: #ded4cc;
      --color-text-muted: #b79f91;
      --shadow-soft: 0 6px 18px rgba(0,0,0,0.28);
      --shadow-hover: 0 10px 26px rgba(0,0,0,0.34);
      --grad-accent: linear-gradient(90deg, #ffffff 0%, #ffffff93 60%, #f7f7f7 100%);
      --text-glow: 0 0 10px rgba(255,255,255,0.22), 0 0 22px rgba(255,255,255,0.12);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html {
      scroll-behavior: smooth;
    }

    @media (max-width: 768px) {
      :root {
        --padding-x: 1.5rem;
        --padding-y: 3rem;
      }
    }

    @media (max-width: 480px) {
      :root {
        --padding-x: .8rem;
        --padding-y: 1.8rem;
      }
      
      body {
        font-size: 15px;
        line-height: 1.5;
      }
    }

    @media (max-width: 360px) {
      :root {
        --padding-x: .7rem;
      }
      
      .whatsapp-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 15px;
        right: 15px;
      }
    }

    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Quicksand', sans-serif;
      min-height: 100vh;
      background-color: var(--color-bg);
      color: var(--color-text);
      overflow-x: hidden;
      line-height: 1.45;
    }

    @media (max-width: 560px) {
      body {
        line-height: 1.5;
      }

      main {
        padding-bottom: 2rem;
      }
    }

    .wrapper {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      width: 100%;
      max-width: 100vw;
      background-color: #180f0f;
    }

    main {
      flex: 1;
      width: 100%;
      position: relative;
    }

    /* Global responsive images and media */
    img, svg, video, canvas { max-width: 100%; height: auto; }

    /* Prevent overflow from flex children on small screens */
    main { min-width: 0; }

    .whatsapp-button {
      position: fixed;
      bottom: 30px;
      right: 30px;
      background: #25d366;
      color: white;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: all 0.3s ease;
      z-index: 1000;
      animation: pulse 2s infinite;
    }

    a.whatsapp-button {
      text-decoration: none;
      color: inherit;
    }

    .whatsapp-button:hover {
      transform: translateY(-5px);
      background: #25d365da;
    }

    /* Botón flotante de Instagram */
    .instagram-button {
      position: fixed;
      bottom: 100px;   /* encima del WhatsApp */
      right: 30px;     /* mismo alineado que WhatsApp */
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.75rem;
      text-decoration: none;
      background: linear-gradient(45deg,#F58529,#FEDA77,#DD2A7B,#8134AF,#515BD4);
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: all .3s ease;
      z-index: 1000;
      animation: pulse 2s infinite;
    }
    .instagram-button:hover {
      transform: translateY(-5px);
      filter: brightness(1.05);
    }

    /* Botón flotante de Facebook */
    .facebook-button {
      position: fixed;
      bottom: 170px;  /* encima de Instagram */
      right: 30px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.75rem;
      text-decoration: none;
      background: #1877F2;
      box-shadow: 0 4px 10px rgba(0,0,0,0.3);
      transition: all .3s ease;
      z-index: 1000;
      animation: pulse 2s infinite;
    }
    .facebook-button:hover {
      transform: translateY(-5px);
      filter: brightness(1.05);
    }

    @media (max-width: 768px) {
      .whatsapp-button {
        width: 50px;
        height: 50px;
        font-size: 1.8rem;
        bottom: 20px;
        right: 20px;
      }

      .instagram-button,
      .facebook-button {
        display: none;
      }
    }

    @media (max-width: 360px) {
      .whatsapp-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 15px;
        right: 15px;
      }

      .instagram-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 70px;  /* encima del WhatsApp en pantallas muy pequeñas */
        right: 15px;   /* mismo alineado que WhatsApp */
      }

      .facebook-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 125px; /* encima de Instagram en pantallas muy pequeñas */
        right: 15px;
      }
    }

    /* Preferencia reduce motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: .01ms !important;
        animation-iteration-count: 1 !important;
        transition: none !important;
      }
    }

            font-size: 1.8rem;
        bottom: 50px; /* adjusted for mobile */
        right: 20px;
      }

      .price-disclaimer {
        bottom: 5px; /* close to bottom on mobile */
        right: 20px;
        max-width: 180px;
        padding: 0.4rem 0.6rem;
      }

      .price-disclaimer p {
        font-size: 0.65rem;
      }
    }

    @media (max-width: 480px) {
      .price-disclaimer {
        bottom: 3px; /* very close to bottom on small mobile */
        right: 15px;
        max-width: 160px;
        padding: 0.3rem 0.5rem;
      }

      .price-disclaimer p {
        font-size: 0.6rem;
      }
    }

    @media (max-width: 360px) {
      .whatsapp-button {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
        bottom: 45px; /* adjusted for very small screens */
        right: 15px;
      }

      .price-disclaimer {
        bottom: 2px; /* minimal space from bottom */
        right: 15px;
        max-width: 140px;
        padding: 0.25rem 0.4rem;
      }

      .price-disclaimer p {
        font-size: 0.55rem;
      }
    }

    /* Preferencia reduce motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: .01ms !important;
        animation-iteration-count: 1 !important;
        transition: none !important;
      }
    }
  </style>
</html>
