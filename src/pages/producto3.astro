---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <div class="producto-detalle">
        <div class="producto-contenido">
            <div class="producto-imagenes">
                <img src="/PeruvianFlavorsCoffee/oxapampa.png" alt="Café Oxapampa" class="imagen-principal">
                <div class="producto-galeria">
                    <img src="/PeruvianFlavorsCoffee/oxapampa.png" alt="Detalle 1">
                    <img src="/PeruvianFlavorsCoffee/oxapampa.png" alt="Detalle 2">
                    <img src="/PeruvianFlavorsCoffee/oxapampa.png" alt="Detalle 3">
                </div>
            </div>
            <div class="producto-info">
                <span class="badge">Origen Único</span>
                <h1>Café Oxapampa</h1>
                <p class="descripcion">
                    Suave con notas florales, proveniente de la selva alta peruana.
                    Un café de origen único que representa la diversidad de sabores de la selva peruana.
                </p>
                <div class="detalles">
                    <div class="origen">
                        <span class="label">Origen:</span>
                        <span>Oxapampa</span>
                    </div>
                    <div class="intensidad">
                        <span class="label">Intensidad:</span>
                        <div class="dots">
                            <span class="dot active"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                            <span class="dot"></span>
                        </div>
                    </div>
                </div>
                <div class="opciones-peso">
                    <h3>Selecciona el peso:</h3>
                    <div class="peso-buttons">
                        <button class="peso-option active" data-price="32.00" data-weight="250g">
                            <span class="weight">250g</span>
                            <span class="price">S/. 32.00</span>
                        </button>
                        <button class="peso-option" data-price="60.00" data-weight="500g">
                            <span class="weight">500g</span>
                            <span class="price">S/. 60.00</span>
                        </button>
                        <button class="peso-option" data-price="90.00" data-weight="1kg">
                            <span class="weight">1 Kilo</span>
                            <span class="price">S/. 90.00</span>
                        </button>
                    </div>
                </div>
                <div class="acciones">
                    <div class="cantidad">
                        <button class="btn-qty" id="decrease">-</button>
                        <input type="number" value="1" min="1" id="quantity">
                        <button class="btn-qty" id="increase">+</button>
                    </div>
                    <div class="total-price">
                        <span>Total: S/. <span id="total">32.00</span></span>
                    </div>
                    <a href="#" class="btn-whatsapp" id="whatsappButton">
                        <i class="fab fa-whatsapp"></i> Comprar por WhatsApp
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .producto-detalle {
        padding: 120px 2rem 4rem;
        background: radial-gradient(1200px 600px at 10% -10%, rgba(240,192,64,.06), transparent 50%) #180f0f;
        min-height: 100vh;
    }

    .producto-contenido {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        color: #fff;
    }

    .producto-imagenes {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .imagen-principal {
        width: 100%;
        border-radius: 20px;
        background: rgba(255,255,255,0.03);
        padding: 2rem;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: 0 10px 30px rgba(0,0,0,.25);
    }

    .producto-galeria {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
    }

    .producto-galeria img {
        width: 100%;
        border-radius: 10px;
        cursor: pointer;
        transition: transform 0.3s ease;
        border: 1px solid rgba(255,255,255,0.08);
    }

    .producto-galeria img:hover {
        transform: translateY(-2px) scale(1.02);
    }

    .badge {
        background: #f0c040;
        color: #180f0f;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    h1 {
        font-size: 2.5rem;
        margin: 1rem 0;
        background: linear-gradient(to right, #3b1205, #ff7e5f);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .descripcion {
        color: #d4d4d4;
        line-height: 1.6;
        margin: 1.5rem 0;
    }

    .detalles {
        background: rgba(0,0,0,0.2);
        padding: 1.5rem;
        border-radius: 15px;
        margin: 2rem 0;
        border: 1px solid rgba(255,255,255,0.06);
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.03);
    }

    .dots {
        display: flex;
        gap: 4px;
    }

    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(240,192,64,0.2);
    }

    .dot.active {
        background: #f0c040;
    }

    .opciones-peso {
        margin: 2rem 0;
    }

    .peso-buttons {
        display: flex;
        gap: .8rem;
        flex-wrap: wrap;
    }

    .peso-option {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(240,192,64,0.25);
        border-radius: 12px;
        padding: .9rem .9rem;
        color: #ddd;
        cursor: pointer;
        transition: all .25s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .peso-option:hover {
        background: rgba(240,192,64,0.08);
        transform: translateY(-2px);
    }

    .peso-option.active {
        background: rgba(240,192,64,0.18);
        border-color: #f0c040;
        box-shadow: 0 6px 18px rgba(240,192,64,0.15);
        color: #fff;
    }

    .peso-option .weight {
        font-weight: 700;
    }

    .peso-option .price  {
        color: #f0c040;
    }

    .acciones {
        display: grid;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .cantidad {
        display: inline-flex;
        align-items: center;
        background: rgba(255,255,255,0.06);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 999px;
        padding: .35rem;
        gap: .25rem;
        width: fit-content;
    }

    .btn-qty {
        background: none;
        border: none;
        color: #f0c040;
        font-size: 1.2rem;
        cursor: pointer;
        padding: .3rem .8rem;
        border-radius: 999px;
    }

    .btn-qty:hover {
        background: rgba(240,192,64,0.12);
    }

    input[type="number"] {
        width: 58px;
        text-align: center;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 1.05rem;
    }

    .total-price {
        font-size: 1.15rem;
        color: #f0c040;
        font-weight: 700;
        background: rgba(240,192,64,0.08);
        border: 1px solid rgba(240,192,64,0.18);
        width: fit-content;
        padding: .6rem .9rem;
        border-radius: 10px;
    }

    .btn-whatsapp {
        background: linear-gradient(135deg, #25d366, #1ebe5d);
        color: white;
        padding: 1rem 1.3rem;
        border-radius: 14px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: .6rem;
        font-size: 1.05rem;
        font-weight: 700;
        box-shadow: 0 10px 22px rgba(37,211,102,0.22);
        transition: transform .2s ease, box-shadow .2s ease, filter .2s ease;
        width: 100%;
        max-width: 380px;
    }

    .btn-whatsapp:hover {
        transform: translateY(-2px);
        filter: brightness(1.05);
    }

    .btn-whatsapp i {
        font-size: 1.2rem;
    }

    @media (max-width: 768px) {
        .producto-contenido {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }

    @media (max-width: 480px) {
        .producto-detalle {
            padding: 100px 1rem 2rem;
        }

        .acciones {
            flex-direction: column;
        }

        .cantidad {
            width: 100%;
            justify-content: center;
        }

        .btn-comprar {
            width: 100%;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        /** @type {HTMLImageElement|null} */
        const mainImg = document.querySelector('.imagen-principal');
        document.querySelectorAll('.producto-galeria img').forEach(img => {
            img.addEventListener('click', () => { if (mainImg) mainImg.src = img.src; });
        });

        /** @type {NodeListOf<HTMLButtonElement>} */
        const pesoButtons = document.querySelectorAll('.peso-option');
        /** @type {HTMLInputElement|null} */
        const quantity = document.getElementById('quantity');
        /** @type {HTMLElement|null} */
        const totalSpan = document.getElementById('total');
        /** @type {HTMLAnchorElement|null} */
        const whatsappButton = document.getElementById('whatsappButton');

        let currentPrice = parseFloat(document.querySelector('.peso-option.active')?.dataset.price || '32');
        let currentWeight = document.querySelector('.peso-option.active')?.dataset.weight || '250g';
        const productName = 'Café Oxapampa';

        function updateTotal() {
            const qty = Math.max(1, parseInt(quantity?.value || '1', 10));
            if (quantity) quantity.value = String(qty);
            const total = (currentPrice * qty).toFixed(2);
            if (totalSpan) totalSpan.textContent = total;

            const message = encodeURIComponent(
                `¡Hola! Me interesa comprar:\n` +
                `- ${qty} unidad(es) de ${productName}\n` +
                `- Peso por unidad: ${currentWeight}\n` +
                `- Total: S/. ${total}`
            );
            if (whatsappButton) {
                whatsappButton.href = `https://wa.me/51987800910?text=${message}`;
            }
        }

        pesoButtons.forEach(button => {
            button.addEventListener('click', () => {
                pesoButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                currentPrice = parseFloat(button.dataset.price || String(currentPrice));
                currentWeight = button.dataset.weight || currentWeight;
                updateTotal();
            });
        });

        /** @type {HTMLButtonElement|null} */
        const dec = document.getElementById('decrease');
        /** @type {HTMLButtonElement|null} */
        const inc = document.getElementById('increase');

        dec?.addEventListener('click', () => {
            if (!quantity) return;
            const val = Math.max(1, parseInt(quantity.value || '1', 10) - 1);
            quantity.value = String(val);
            updateTotal();
        });

        inc?.addEventListener('click', () => {
            if (!quantity) return;
            const val = Math.max(1, parseInt(quantity.value || '1', 10) + 1);
            quantity.value = String(val);
            updateTotal();
        });

        quantity?.addEventListener('change', updateTotal);
        updateTotal();
    });
</script>
